<!DOCTYPE html>
<html lang="en">
		<head>
		<%- include('./headtag'); %>
	</head>
	<body>
		<%- include('./navbar'); %>
		<div class="container players-add grid">
			<h1>Add Player</h1>

			<form action="/players/add" method="POST" enctype="multipart/form-data">
				<div>
					<label for="player_first">First Name:</label>
					<input type="text" id="player_first" name="player_first" required />
				</div>				
				<div>
					<label for="player_last">Last Name:</label>
					<input type="text" id="player_last" name="player_last" required />
				</div>
				<div>
					<label for="player_dob">Date of Birth:</label>
					<input type="date" id="player_dob" name="player_dob" required />
				</div>
				<div>
					<label for="player_phone">Phone:</label>
					<input type="text" id="player_phone" name="player_phone" />
				</div>
				<div>
					<label for="player_email">Email:</label>
					<input type="email" id="player_email" name="player_email" />
				</div>
				<div>
					<label for="player_gender">Gender:</label>
					<select id="player_gender" name="player_gender">
						<option value="">Select</option>
						<option value="M">Male</option>
						<option value="F">Female</option>
					</select>
				</div>
				<div>
					<label for="player_shot">Shot:</label>
					<select id="player_shot" name="player_shot">
						<option value="">Select</option>
						<option value="R">Right</option>
						<option value="L">Left</option>
					</select>
				</div>
				<div>
					<label for="player_positions">Positions:</label>
					<select id="player_positions" name="player_positions[]" multiple size="3">
						<option value="1">Forward</option>
						<option value="2">Defense</option>
						<option value="3">Goalie</option>
					</select>
				</div>
				<div>
					<label for="player_shirt">Shirt:</label>
					<select id="player_shirt" name="player_shirt" required>
						<option value="">Choose Size</option>
						<option value="XS">XS</option>
						<option value="S">S</option>
						<option value="M">M</option>
						<option value="L">L</option>
						<option value="XL">XL</option>
						<option value="XXL">XXL</option>
						<option value="XXXL">XXXL</option>
					</select>
				</div>
				<div>
					<label for="player_picture">Picture:</label>
					<input type="file" id="player_picture" name="player_picture" accept="image/*" />
				</div>
				<div>
					<label for="player_hometown">Hometown:</label>
					<input type="text" id="player_hometown" name="player_hometown" />
				</div>
				<div>
					<label for="player_active">Active:</label>
					<select id="player_active" name="player_active">
						<option value="1">Yes</option>
						<option value="0">No</option>
					</select>
				</div>
				<div>
					<label for="player_draftpos">Average Draft Position:</label>
					<input type="number" id="player_draftpos" name="player_draftpos" />
				</div>
				<button type="submit">Add Player</button>
			</form>
		</div>
	</body>
</html>
